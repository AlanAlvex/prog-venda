unit uDAOCliente;

interface

uses
  FireDAC.Stan.Option, FireDAC.Stan.Error, FireDAC.UI.Intf, FireDAC.Phys.Intf,
  FireDAC.Stan.Def, FireDAC.Stan.Pool, FireDAC.Stan.Async, FireDAC.Phys,
  FireDAC.VCLUI.Wait, Data.DB, FireDAC.Comp.Client, SysUtils, uControllerConexao,
  uModelCliente;

type
  TDAOCliente = class

    private
    public
      function SalvarCliente: Boolean;

      function selecionarCliente: TFDQuery;
      function incluir (ModelCliente : TModelCliente): Boolean;
      function excluir (ModelCliente : TModelCliente): Boolean;
      function alterar (ModelCliente : TModelCliente): Boolean;
  end;


implementation

function TDAOCliente.SalvarCliente: Boolean;
var
  qrCliente : TFDQuery;
begin
  qrCliente := TControllerConexao.getInstanse.daoConexao.getQuery;
  try
    try
      qrCliente.ExecSQL('INSERT INTO (NOME,CPF,CEP,ENDERECO,TELEFONE)'+
                        'VALUES("'+Self.strNome+'","'+Self.strCPF+'","'+Self.strCEP+'",'
                        +'"'+Self.strEndereco+'","'+Self.strTelefone+'")');

      Result := True;
    except
      Result := False;
    end;
  finally
    qrCliente.Free;
  end;
end;

end.
